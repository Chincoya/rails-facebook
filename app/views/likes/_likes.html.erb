<div class="text-primary">
<%= pluralize(locals[:post].likes.count, 'Like') %>
</div>
<% unless like = current_user.likes.find_by(likeable_id: locals[:post].id) %>
<%= link_to 'Like', likes_path(:params => {post: {post_id: locals[:post].id}}), method: :post %>
<% else %>
<%= link_to 'Unlike', like, method: :delete %>
<% end %> 