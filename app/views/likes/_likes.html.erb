<div class="text-primary">
<%= pluralize(locals[:post].like_count, 'Like') %>
</div>
<% unless like = locals[:post].liked_by(current_user) %>
<%= link_to 'Like', likes_path(:params => {post: {post_id: locals[:post].id}}), method: :post %>
<% else %>
<%= link_to 'Unlike', like, method: :delete %>
<% end %> 